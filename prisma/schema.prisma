generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  country        String
  countryCode    String
  phoneNumber    String
  email          String   @unique
  password       String
  confirmPassword String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

